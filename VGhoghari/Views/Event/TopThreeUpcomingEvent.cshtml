@model IEnumerable<VGhoghari.Models.EventTO>
<!-- Events Listing -->
<div class="listing events-listing">
  <header class="listing-header">
    <h3>More Coming Events</h3>
  </header>
  <section class="listing-cont">
    @if(Model.ToList().Count > 0) {
      <ul>
        @foreach(var item in Model) {
          <li class="item event-item">
            <div class="event-date"> <span class="date">@item.StartDate.ToString("dd")</span> <span class="month">@item.StartDate.ToString("MMM")</span> </div>
            <div class="event-detail">
              <h4> @Html.ActionLink(item.Title, "Details", "Event", new { code = item.Code }, null)</h4>
              <span class="event-dayntime meta-data">@item.StartDate.ToString("dddd") | @item.StartDate.ToString("HH:mm")</span>
            </div>
            <div class="to-event-url">
              <div>@Html.ActionLink("Details", "Details", "Event", new { code = item.Code }, new { @class="btn btn-default btn-sm" })</div>
            </div>
          </li>
        }
      </ul>
    }

  </section>
</div>
