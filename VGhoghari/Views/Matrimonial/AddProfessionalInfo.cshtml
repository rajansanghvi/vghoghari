@{
  ViewBag.Title = "Professional Info - Continue creating your Biodata Online and Register as a Bride or a Groom";
}

@section css{
  @Styles.Render("~/plugins/bootstrap-select-1.10.0/css/bootstrap-select.min.css")
}

<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax" style="background-image:url(@Url.Content("~/images/page_headers/biodata_page_header.jpg"));">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">
          <li>@Html.ActionLink("Home", "Index", "Home", null, new { style = "color: #3E2300;" })</li>
          <li class="active" style="color: #BA6E0B">Matrimonial</li>
          <li class="active" style="color: #BA6E0B">Create Biodata</li>
          <li class="active" style="color: #BA6E0B">Professional Info</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header -->
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-sm-10 col-xs-8">
        <h1 style="color: #EDA159">Add Professional Info</h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Header -->
<!-- Start Content -->
<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <header class="single-post-header clearfix">
            <h3 class="post-title" style="color: #eea546;">Continue by Adding your Professional Info</h3>
          </header>
          <div class="post-content">
            <div class="row bs-wizard" style="border-bottom:0;">

              <div class="col-xs-2 bs-wizard-step complete">
                <div class="text-center bs-wizard-stepnum">Step 1</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center">Basic and Contact Info.</div>
              </div>

              <div class="col-xs-2 bs-wizard-step complete">
                <!-- complete -->
                <div class="text-center bs-wizard-stepnum">Step 2</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center">Personal Info</div>
              </div>

              <div class="col-xs-1 bs-wizard-step active">
                <!-- complete -->
                <div class="text-center bs-wizard-stepnum">Step 3</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center">Professional Info</div>
              </div>

              <div class="col-xs-2 bs-wizard-step disabled">
                <!-- active -->
                <div class="text-center bs-wizard-stepnum">Step 4</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center"> Family Info</div>
              </div>

              <div class="col-xs-2 bs-wizard-step disabled">
                <!-- active -->
                <div class="text-center bs-wizard-stepnum">Step 5</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center"> Family's Occupation Info</div>
              </div>

              <div class="col-xs-1 bs-wizard-step disabled">
                <!-- active -->
                <div class="text-center bs-wizard-stepnum">Step 6</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center"> Sibbling Info </div>
              </div>

              <div class="col-xs-1 bs-wizard-step disabled">
                <!-- active -->
                <div class="text-center bs-wizard-stepnum">Step 7</div>
                <div class="progress"><div class="progress-bar"></div></div>
                <a href="#" class="bs-wizard-dot"></a>
                <div class="bs-wizard-info text-center"> Additional Info</div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12 margin-15">
                <div>
                  <h6>All fields marked with <span class="red">*</span> are compulsory. Please fill in the required details and continue to register yourselves as a bride or a groom.</h6>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <div id="message" class="alert alert-error fade in hide">
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12 margin-10">
                <h4 class="post-title"> Education Info </h4>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="education" class="control-label thin-label required">Highest Education: <span class="red">*</span></label>
                  <select id="education" name="education" class="form-control selectpicker" data-show-tick="true" data-tick-icon="fa fa-check" data-show-menu-arrow="true">
                    <option value="0">Select One</option>
                    <option value="4">Post Graduation</option>
                    <option value="3">Graduation</option>
                    <option value="2">HSC</option>
                    <option value="1">SSC</option>
                  </select>
                  <div id="education-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="degrees-achieved" class="control-label thin-label required">Degrees Achieved: <span class="red">*</span></label>
                  <select id="degrees-achieved" name="degrees-achieved" class="form-control selectpicker" data-show-tick="true" data-tick-icon="fa fa-check" data-show-menu-arrow="true" multiple>
                    <optgroup label="PG-Professional Courses">
                      <option value="CA (Chartered Accountant)">CA (Chartered Accountant)</option>
                      <option value="CFA (Chartered Financial Analyst)">CFA (Chartered Financial Analyst)</option>
                      <option value="CS (Company Secretary)">CS (Company Secretary)</option>
                      <option value="ICWA">ICWA</option>
                      <option value="Integrated PG">Integrated PG</option>
                      <option value="M.Arch. (Architecture)">M.Arch. (Architecture)</option>
                      <option value="M.Ed. (Education)"> M.Ed. (Education)</option>
                      <option value="M.Lib.Sc. (Library Sciences)">M.Lib.Sc. (Library Sciences)</option>
                      <option value="M.Plan. (Planning)">M.Plan. (Planning)</option>
                      <option value="Master of Fashion Technology">Master of Fashion Technology</option>
                      <option value="Master of Health Administration">Master of Health Administration</option>
                      <option value="Master of Hospital Administration"> Master of Hospital Administration</option>
                      <option value="MBA/PGDM">MBA/PGDM</option>
                      <option value="MCA PGDCA part time">MCA PGDCA part time</option>
                      <option value="MCA/PGDCA">MCA/PGDCA</option>
                      <option value="ME/M.Tech/MS (Engg/Sciences)">ME/M.Tech/MS (Engg/Sciences)</option>
                      <option value="MFA (Fine Arts)">MFA (Fine Arts)</option>
                      <option value="ML/LLM (Law)">ML/LLM (Law)</option>
                      <option value="MSW (Social Work)">MSW (Social Work)</option>
                      <option value="PG Diploma">PG Diploma</option>
                    </optgroup>
                    <optgroup label="PG-General Courses">
                      <option value="M.Com. (Commerce)">M.Com. (Commerce)</option>
                      <option value="M.Sc. (Science)">M.Sc. (Science)</option>
                      <option value="MA (Arts)">MA (Arts)</option>
                    </optgroup>
                    <optgroup label="Graduation-Professional Courses">
                      <option value="B.Arch (Architecture)">B.Arch (Architecture)</option>
                      <option value="B.Ed (Education)">B.Ed (Education)</option>
                      <option value="B.El.Ed (Elementary Education)">B.El.Ed (Elementary Education)</option>
                      <option value="B.Lib.Sc (Library Sciences)">B.Lib.Sc (Library Sciences)</option>
                      <option value="B.P.Ed. (Physical Education)">B.P.Ed. (Physical Education)</option>
                      <option value="B.Plan (Planning)">B.Plan (Planning)</option>
                      <option value="Bachelor of Fashion Technology">Bachelor of Fashion Technology</option>
                      <option value="BBA/BBM/BBS">BBA/BBM/BBS</option>
                      <option value="BCA (Computer Application)">BCA (Computer Application)</option>
                      <option value="BE B.Tech (Engineering)">BE B.Tech (Engineering)</option>
                      <option value="BFA (Fine Arts)">BFA (Fine Arts)</option>
                      <option value="BHM (Hotel Management)">BHM (Hotel Management)</option>
                      <option value="BL/LLB/BGL (Law)">BL/LLB/BGL (Law)</option>
                      <option value="BSW (Social Work)">BSW (Social Work)</option>
                    </optgroup>
                    <optgroup label="Graduation-General Courses">
                      <option value="B.A. (Arts)">B.A. (Arts)</option>
                      <option value="B.Com (Commerce)">B.Com (Commerce)</option>
                      <option value="B.Sc (Science)">B.Sc (Science)</option>
                    </optgroup>
                    <optgroup label="Medicine(General, Dental, Surgeon)">
                      <option value="B.A.M.S (Bachelor of Ayurvedic Medicine and Surgery)">B.A.M.S (Bachelor of Ayurvedic Medicine and Surgery)</option>
                      <option value="B.Pharm (Pharmacy)">B.Pharm (Pharmacy)</option>
                      <option value="B.V.Sc. (Veterinary Science)">B.V.Sc. (Veterinary Science)</option>
                      <option value="BDS (Dental Surgery)">BDS (Dental Surgery)</option>
                      <option value="BHMS (Homeopathy)">BHMS (Homeopathy)</option>
                      <option value="M.Pharm. (Pharmacy)">M.Pharm. (Pharmacy)</option>
                      <option value="M.V.Sc. (Veterinary Science)">M.V.Sc. (Veterinary Science)</option>
                      <option value="MBBS">MBBS</option>
                      <option value="MD/ MS (Medicine)">MD/ MS (Medicine)</option>
                      <option value="MDS (Master of Dental Surgery)">MDS (Master of Dental Surgery)</option>
                      <option value="BPT (Physiotherapy)">BPT (Physiotherapy)</option>
                      <option value="MPT (Physiotherapy)">MPT (Physiotherapy)</option>
                    </optgroup>
                    <optgroup label="Doctorate(Phd)">
                      <option value="M.Phil. (Philosophy)">M.Phil. (Philosophy)</option>
                      <option value="Ph.D. (Doctorate)">Ph.D. (Doctorate)</option>
                      <option value="Other Doctorate">Other Doctorate</option>
                    </optgroup>
                    <optgroup label="Diploma Courses">
                      <option value="Arts/ Graphic Designing">Arts/ Graphic Designing</option>
                      <option value="Engineering">Engineering</option>
                      <option value="Fashion/ Design">Fashion/ Design</option>
                      <option value="Languages">Languages</option>
                      <option value="Pilot Licenses">Pilot Licenses</option>
                      <option value="Other Diploma">Other Diploma</option>
                    </optgroup>
                    <optgroup label="12th but not pursuing graduation">
                      <option value="HSC">HSC</option>
                    </optgroup>
                    <optgroup label="10th but not pursuing 12th">
                      <option value="SSC">SSC</option>
                    </optgroup>
                    <optgroup label="Other">
                      <option value="Other">Other</option>
                    </optgroup>
                  </select>
                  <div id="education-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="university" class="control-label thin-label">Last University/College Attended:</label>
                  <input type="text" id="university" name="university" class="form-control input-sm" />
                  <div id="university-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <div class="form-group">
                  <label for="addl-info" class="control-label thin-label">Additional Education Info/Degrees :</label>
                  <textarea id="addl-info" name="addl-info" class="form-control input-sm"></textarea>
                  <div id="addl-info-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-md-12">
                <hr />
              </div>

              <div class="col-md-12 margin-10">
                <h4 class="post-title"> Occupation Info </h4>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="occupation" class="control-label thin-label required">Occupation: <span class="red">*</span></label>
                  <select id="occupation" name="occupation" class="form-control selectpicker" data-show-tick="true" data-tick-icon="fa fa-check" data-show-menu-arrow="true">
                    <option value="0">Select One</option>
                    <option value="1">Business</option>
                    <option value="2">Profession</option>
                    <option value="3">Service</option>
                    <option value="4">Student</option>
                    <option value="5">Other</option>
                  </select>
                  <div id="occupation-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="professional-sector" class="control-label thin-label required">Professional Sector: <span class="red">*</span></label>
                  <select id="professional-sector" name="professional-sector" class="form-control selectpicker" data-show-tick="true" data-tick-icon="fa fa-check" data-show-menu-arrow="true">
                    <option value="">Select One</option>
                    <option value="Admin/Secretarial">Admin/Secretarial</option>
                    <option value="Advertising/ Entertainment/ Media">Advertising/ Entertainment/ Media</option>
                    <option value="Agriculture">Agriculture</option>
                    <option value="Architecture & Design">Architecture & Design</option>
                    <option value="Artists, Animators & Web Designers">Artists, Animators & Web Designers</option>
                    <option value="Banking, Insurance & Financial Services">Banking, Insurance & Financial Services</option>
                    <option value="Beauty, Fashion & Jewellery Designers">Beauty, Fashion & Jewellery Designers</option>
                    <option value="Business Owner / Entrepreneur">Business Owner / Entrepreneur</option>
                    <option value="Civil Services / Law Enforcement">Civil Services / Law Enforcement</option>
                    <option value="Construction">Construction</option>
                    <option value="Customer Service/ Call Centre/BPO">Customer Service/ Call Centre/BPO</option>
                    <option value="Defence">Defence</option>
                    <option value="Education/ Training">Education/ Training</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Export/ Import"> Export/ Import</option>
                    <option value="Finance and Accounts">Finance and Accounts</option>
                    <option value="Government Employee">Government Employee</option>
                    <option value="Health Care"> Health Care</option>
                    <option value="Hotels/ Restaurants">Hotels/ Restaurants</option>
                    <option value="Human Resource">Human Resource</option>
                    <option value="IT">IT</option>
                    <option value="Legal">Legal</option>
                    <option value="Loss Prevention Manager">Loss Prevention Manager</option>
                    <option value="Management / Corporate Professionals"> Management / Corporate Professionals</option>
                    <option value="Manufacturing/ Engineering/ R&D">Manufacturing/ Engineering/ R&D</option>
                    <option value="Marketing and Communications">Marketing and Communications</option>
                    <option value="Merchant Navy">Merchant Navy</option>
                    <option value="Non Working">Non Working</option>
                    <option value="Oil & Gas">Oil & Gas</option>
                    <option value="Others">Others</option>
                    <option value="Pharmaceutical/ Biotechnology">Pharmaceutical/ Biotechnology</option>
                    <option value="Purchase/ Logistics/ Supply chain">Purchase/ Logistics/ Supply chain</option>
                    <option value="Real Estate"> Real Estate</option>
                    <option value="Retail Chains">Retail Chains</option>
                    <option value="Sales/ Business Development">Sales/ Business Development</option>
                    <option value="Science">Science</option>
                    <option value="Telecom/ ISP">Telecom/ ISP</option>
                    <option value="Travel/ Airlines">Travel/ Airlines</option>
                  </select>
                  <div id="professional-sector-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="organization-name" class="control-label thin-label">Organization Name:</label>
                  <input type="text" id="organization-name" name="organization-name" class="form-control input-sm" />
                  <div id="organization-name-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label for="designation" class="control-label thin-label">Designation:</label>
                  <input type="text" id="designation" name="designation" class="form-control input-sm" />
                  <div id="designation-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <div class="form-group">
                  <label for="organization-address" class="control-label thin-label">Organization Address :</label>
                  <textarea id="organization-address" name="organization-address" class="form-control input-sm"></textarea>
                  <div id="organization-address-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <input id="submit" name="submit" type="submit" class="btn btn-primary btn-lg pull-right" style="background-color: #eea546;" value="Save Professional Info!" />

                @Html.ActionLink("Go Back & Manage Existing Biodata", "Manage", "Matrimonial", null, new { @class = "btn btn-lg btn-default" })

                <input id="reset" name="reset" type="reset" class="btn btn-default btn-lg" value="Reset" />
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section scripts{
  @Scripts.Render("~/plugins/bootstrap-select-1.10.0/js/bootstrap-select.min.js")

  @Scripts.Render("~/Scripts/validations/constants.js")
  @Scripts.Render("~/Scripts/validations/validation.js")
  @Scripts.Render("~/Scripts/validations/matrimonial/addProfessionalInfo.js")
}
