@{
  ViewBag.Title = "Login To Your Account";
}

<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax" style="background-image:url(@Url.Content("~/images/page_headers/login_page_header.jpg"));">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">
          <li>@Html.ActionLink("Home", "Index", "Home", null, new { style = "color: #3E2300" })</li>
          <li class="active" style="color: #3a362b">User</li>
          <li class="active" style="color: #3a362b">Login</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header -->
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-sm-10 col-xs-8">
        <h1 style="color: #BA935A">User Login</h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Header -->
<!-- Start Content -->
<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-sm-12">
          <header class="single-post-header clearfix">
            <h2 class="post-title" style="color: #C29E60">Login Now!</h2>
          </header>
          <div class="post-content">
            <div class="row">
              <div class="col-md-12 margin-15">
                <div>
                  <h6>
                    All fields marked with <span class="red">*</span> are compulsory. Please fill in the required details and login to your account.
                  </h6>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <div id="message" class="alert alert-error fade in hide">
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="username" class="control-label thin-label required">Username: <span class="red">*</span></label>
                  <input type="text" id="username" name="username" class="form-control input-sm" />
                  <div id="username-error" class="text-danger text-justify"></div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group text-align-left">
                  <label for="password" class="control-label thin-label required">Password: <span class="red">*</span></label>
                  <input type="password" id="password" name="password" class="form-control input-sm" />
                  <div id="password-error" class="text-danger text-justify"></div>
                </div>

                <div class="checkbox">
                  <label>
                    <input type="checkbox" id="persistent-login" name="persistent-login" /> Keep me logged in.
                  </label>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <input id="submit" name="submit" type="submit" class="btn btn-primary btn-lg pull-right" value="Login now!" />

                @Html.ActionLink("Don't have an account? Register Now", "Register", "User", null, new { @class = "btn btn-lg btn-default pull-right margin-right-10" })

                <input id="reset" name="reset" type="reset" class="btn btn-default btn-lg" value="Reset" />
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section scripts{
  @Scripts.Render("~/Scripts/validations/constants.js")
  @Scripts.Render("~/Scripts/validations/validation.js")
  @Scripts.Render("~/Scripts/validations/user/login.js")
}
