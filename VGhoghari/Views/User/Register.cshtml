@{
  ViewBag.Title = "New User Registration";
}

<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax" style="background-image:url(@Url.Content("~/images/page_headers/register_page_header.jpg"));">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">
          <li>@Html.ActionLink("Home", "Index", "Home", null, new { style = "color: #f28100" })</li>
          <li class="active" style="color: #f59800">User</li>
          <li class="active" style="color: #f59800">Register</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header -->
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-sm-10 col-xs-8">
        <h1 style="color: #f28100">User Registration</h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Header -->
<!-- Start Content -->
<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">
      <div class="row">
        <div class="col-md-9 col-sm-8">
          <header class="single-post-header clearfix">
            <h2 class="post-title" style="color: #f5a800">Register Here!</h2>
          </header>
          <div class="post-content">
            <div class="row">
              <div class="col-md-12 margin-15">
                <div>
                  <h6>
                    All fields marked with <span class="red">*</span> are compulsory. Please fill in the required details and register yourselves with us.
                  </h6>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <div id="message" class="alert alert-error fade in hide">
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="fullname" class="control-label thin-label required">Full Name: <span class="red">*</span></label>
                  <input type="text" id="fullname" name="fullname" class="form-control input-sm" />
                  <div id="fullname-error" class="text-danger text-justify"></div>
                </div>

                <div class="form-group">
                  <label for="username" class="control-label thin-label required">Username: <span class="red">*</span></label>
                  <input type="text" id="username" name="username" class="form-control input-sm" />
                  <div id="username-error" class="text-danger text-justify"></div>
                </div>

                <div class="form-group">
                  <label for="password" class="control-label thin-label required">Password: <span class="red">*</span></label>
                  <input type="password" id="password" name="password" class="form-control input-sm" />
                  <div id="password-error" class="text-danger text-justify"></div>
                </div>

                <div class="form-group">
                  <label for="confirm-password" class="control-label thin-label required">Confirm Password: <span class="red">*</span></label>
                  <input type="password" id="confirm-password" name="confirm-password" class="form-control input-sm" />
                  <div id="confirm-password-error" class="text-danger text-justify"></div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="mobile-no" class="control-label thin-label required">Mobile Number: <span class="red">*</span></label>
                  <input type="text" id="mobile-no" name="mobile-no" class="form-control input-sm" />
                  <div id="mobile-no-error" class="text-danger text-justify"></div>
                </div>

                <div class="form-group">
                  <label for="email-id" class="control-label thin-label">Email Id:</label>
                  <input type="text" id="email-id" name="email-id" class="form-control input-sm" />
                  <div id="email-id-error" class="text-danger text-justify"></div>
                </div>

                <div class="form-group">
                  <label for="religion" class="control-label thin-label">Religion/Caste:</label>
                  <input type="text" id="religion" name="religion" class="form-control input-sm" />
                  <div id="religion-error" class="text-danger text-justify"></div>
                </div>
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <input id="submit" name="submit" type="submit" class="btn btn-primary btn-lg pull-right" value="Register now!" />
                <input id="reset" name="reset" type="reset" class="btn btn-default btn-lg" value="Reset" />
              </div>
              <div class="clearfix"></div>

              <div class="col-md-12">
                <h6>
                  @Html.ActionLink("Already have an account? Click here to login...", "Login", "User", null, new { @class = "pull-right" })
                </h6>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>

        <!-- Start Sidebar -->
        <div class="col-md-3 col-sm-4">
          <div class="widget sidebar-widget">
            <div class="sidebar-widget-title">
              <h3>Advertisement</h3>
            </div>
            <a href="#"><img src="http://placehold.it/300x300&amp;text=Advertise Here" alt="AD"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section scripts{
  @Scripts.Render("~/Scripts/validations/constants.js")
  @Scripts.Render("~/Scripts/validations/validation.js")
  @Scripts.Render("~/Scripts/validations/user/register.js")
}
